{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@v4company/ui-components": ["shared/ui-components/src/index.ts"],
      "@v4company/ui-components/*": ["shared/ui-components/src/*"],
      "@v4company/utils": ["shared/utils/src/index.ts"],
      "@v4company/utils/*": ["shared/utils/src/*"],
      "@v4company/types": ["shared/types/src/index.ts"],
      "@v4company/types/*": ["shared/types/src/*"],
      "@v4company/services": ["shared/services/src/index.ts"],
      "@v4company/services/*": ["shared/services/src/*"],
      "@v4company/hooks": ["shared/hooks/src/index.ts"],
      "@v4company/hooks/*": ["shared/hooks/src/*"],
      "@v4company/contexts": ["shared/contexts/src/index.ts"],
      "@v4company/contexts/*": ["shared/contexts/src/*"],
      "@v4company/pages": ["shared/pages/src/index.ts"],
      "@v4company/pages/*": ["shared/pages/src/*"],
      "@v4company/providers": ["shared/providers/src/index.ts"],
      "@v4company/providers/*": ["shared/providers/src/*"],
      "@v4company/assets/*": ["shared/assets/src/*"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
